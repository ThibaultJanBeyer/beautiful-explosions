{
  "name": "beautiful-web-animations",
  "version": "0.0.1",
  "description": "Yet another library for beautiful pre-made animations for the web in vanilla js with shadow dom",
  "main": "./dist/index.js",
  "type": "module",
  "repository": "git@github.com:ThibaultJanBeyer/beautiful-explosions.git",
  "author": "Thibault Jan Beyer <thibault.beyer@gmail.com>",
  "license": "GLP-3.0",
  "scripts": {
    "build": "esbuild ./src/index.ts --outdir=dist --bundle --minify --sourcemap --target=es6  --format=esm",
    "build:watch": "esbuild ./src/index.ts --outfile=dist/index.js --bundle --sourcemap --watch --format=esm",
    "lint": "eslint --ext .js,.ts ./src",
    "start": "http-server . --cors true -o /test & yarn build:watch"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "esbuild": "^0.15.11",
    "eslint": "^8.0.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "http-server": "^14.1.1",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "rollup": "^3.1.0"
  }
}
